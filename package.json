{
  "name": "minimem",
  "version": "0.0.3",
  "description": "A lightweight file-based memory system with vector search for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && npm run postbuild",
    "postbuild": "node scripts/postbuild.js",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:integration": "npx tsx --test src/__tests__/minimem.integration.test.ts",
    "test:cli": "npx tsx --test src/cli/__tests__/commands.test.ts",
    "test:all": "npm run test && npm run test:integration && npm run test:cli",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "memory",
    "vector-search",
    "embeddings",
    "sqlite",
    "ai-agent",
    "rag",
    "semantic-search"
  ],
  "author": "Alex Ngai",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "minimem": "./dist/cli/index.js"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "commander": "^12.0.0",
    "minimatch": "^10.1.1",
    "sqlite-vec": "^0.1.6"
  },
  "optionalDependencies": {
    "node-llama-cpp": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
